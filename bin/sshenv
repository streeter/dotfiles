#!/bin/sh
# Usage: sshenv <command>
#
# Setup environment for MacOS's built-in ssh-agent and execute
# command. Useful when crontab commands require ssh-agent access
# for authentication.

test $# -eq 0 && {
    cat $0          |
    grep '^#'       |
    grep -v /bin/sh |
    cut -c3-
    exit
}

SSH_AUTH_SOCK=$(
  /usr/sbin/lsof -U |
  grep Listeners    |
  grep ssh-agent    |
  awk '{print $8}'
)
export SSH_AUTH_SOCK

exec "$@"