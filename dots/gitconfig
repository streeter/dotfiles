[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    clone = clone --recursive
    df = diff
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    undopush = push -f origin HEAD^:master

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[branch]
    autosetupmerge = true

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
	remote = origin
	merge = refs/heads/master

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    # Treat certain kinds of whitespace as errors
    whitespace = -indent-with-non-tab,cr-at-eol,space-before-tab,trailing-space
    pager = less -FXRS -x2

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
    #meta = yellow bold
    old = red #bold
    new = green #bold
    whitespace = red reverse

[color "sh"]
    branch = yellow

[color "status"]
	added = cyan
	changed = yellow
	untracked = red

[diff]
    renames = copies

[merge]
    stat = true
    # Include summaries of merged commits in newly created merge commit messages
    log = true

[push]
    default = current

# URL shorthands
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
