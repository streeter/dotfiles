
# ls
if [[ FreeBSD == $(uname) || Darwin == $(uname) ]] ; then
    alias ls='ls -GF'
    alias ll='ls -lk'
else
    # enable color support of ls and also add handy aliases
    if [ -x /usr/bin/dircolors ]; then
        test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
        alias ls='ls --color=auto'
        #alias dir='dir --color=auto'
        #alias vdir='vdir --color=auto'

        alias grep='grep --color=auto'
        alias fgrep='fgrep --color=auto'
        alias egrep='egrep --color=auto'
    fi
    alias ls='ls -F'
    alias ll='ls -lk'
fi
alias la='ll -a'
alias l='ls'


alias cd..="cd .."		
alias s="cd .."
alias p="cd -"
alias md="mkdir"
alias rd="rmdir"
alias cp="cp -i"
alias mv="mv -i"
alias c=clear

alias rs='ssh streeter@chrisstreeter.com'
alias ocf='ssh streeter@ocf.berkeley.edu'

alias home='ssh streeter@cstreeter.homeip.net'
alias scoutvnc='ssh -L 5903:localhost:5900 streeter@cstreeter.homeip.net'

# Attach to a screen session and detach it elsewhere if need be.
alias screen='screen -dR'

# Include any aliases specific to this machine
ALIAS_DIR="${HOME}/.alias.d"
if [ -d "${ALIAS_DIR}" ]; then
    if [ -e "${ALIAS_DIR}/${HOSTNAME}.alias" ]; then
        source "${ALIAS_DIR}/${HOSTNAME}.alias"
    fi
fi

calc(){ awk "BEGIN{ print $* }" ;}
