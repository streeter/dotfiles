# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,md,txt}]
indent_size = 4

# 2 space indentation
[*.{yml,js*,geojson,html,css,scss,rb,conf,rake}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Cocoapods
[Podfile]
indent_size = 2

# Fastlane stuff
[{Match,Scan,Fast,Deliver,App}file]
indent_size = 2

[Vagrantfile]
indent_size = 2
