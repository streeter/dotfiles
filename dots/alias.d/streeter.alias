#!/bin/bash


: ${UNAME=$(uname)}


alias xmltidy='xmllint --format'

if [ "$UNAME" = Darwin ]; then
    alias ls='ls -GF'
    alias ll='ls -lk'

    test -e '~/Applications/MacVim.app' &&
    alias gvim='open -a ~/Applications/MacVim.app'

    if hash hub 2>/dev/null; then
        alias git=hub
    fi

    alias subl='subl -n'
    alias sub=subl
    alias mate=subl
fi

alias essh=ec2-ssh
alias ehost=ec2-host
