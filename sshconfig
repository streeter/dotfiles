Host home
  HostName home.streeter.co
  User streeter
  ForwardAgent yes
  IdentitiesOnly yes

Host miwokadmin
  HostName home.streeter.co
  User root
  LocalForward 5000 localhost:5000
  ForwardAgent no
  IdentitiesOnly yes

Host chrisstreeter.com
  HostName chrisstreeter.com
  User streeter
  ForwardAgent yes

